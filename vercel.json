{
  "version": 2,
  "name": "vidfast-stremio-addon",
  "routes": [
    {
      "src": "/manifest.json",
      "dest": "/api/manifest.js"
    },
    {
      "src": "/stream/movie/(.*)",
      "dest": "/api/stream.js?type=movie&id=$1"
    },
    {
      "src": "/stream/series/(.*)",
      "dest": "/api/stream.js?type=series&id=$1"
    },
    {
      "src": "/stream/(.*)",
      "dest": "/api/stream.js"
    },
    {
      "src": "/health",
      "dest": "/api/health.js"
    },
    {
      "src": "/",
      "dest": "/api/index.js"
    }
  ],
  "functions": {
    "api/*.js": {
      "maxDuration": 10
    }
  }
}
